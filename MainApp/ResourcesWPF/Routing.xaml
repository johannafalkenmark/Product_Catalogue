<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodels="clr-namespace:MainApp.ViewModels"
                    xmlns:views="clr-namespace:MainApp.Views"
                    >

    <DataTemplate DataType="{x:Type viewmodels:OverviewViewModel }">
        <views:OverviewView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:CreateViewModel }">
        <views:CreateView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:EditViewModel }">
        <views:EditView />
    </DataTemplate>

</ResourceDictionary>